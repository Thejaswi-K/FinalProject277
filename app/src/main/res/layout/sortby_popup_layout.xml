<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/rect_white"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/sortbytitle"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Title"
                android:layout_margin="10dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@android:color/black"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/sortbypublisher"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Publisher"
                android:layout_margin="10dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@android:color/black"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/sortbyyearofpublishing"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Year of Publishing"
                android:layout_margin="10dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@android:color/black"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/sortbyauthor"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Author"
                android:layout_margin="10dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@android:color/black"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/sortbylocation"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Library Location"
                android:layout_margin="10dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>